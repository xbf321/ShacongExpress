@{
    ViewBag.Title = "用户基本信息列表";
    Layout = "../Shared/_PagesAdminLayout.cshtml";
}
<fieldset>
    <legend>用户基本信息列表</legend>
    <table class="tblist" width="100%">
        <tr>
            <th width="10%">用户名</th>
            <th width="15%">公司名称</th>
            <th width="10%">手机</th>
            <th>微信ID</th>
            <th width="10%">用户类型</th>
            <th width="10%">注册时间</th>
            <th width="5%">状态</th>
        </tr>
        @foreach(var item in ViewBag.List){
            <tr>
                <td class="tdcenter">@(item.UserName)</td>
                <td class="tdcenter">@(item.CompanyName)</td>
                <td class="tdcenter">@(item.Mobile)</td>
                <td>@(item.OpenId)</td>
                <td class="tdcenter">@(item.UserType)</td>
                <td class="tdcenter">@(item.CreateDateTime.ToString("yyyy-MM-dd"))</td>
                <td class="tdcenter">@(item.Status)</td>
            </tr>
        }
    </table>
    @Html.Raw(ShacongExpress.Common.PagerBarHelper.Render(ViewBag.List.PageIndex, ViewBag.List.PageSize, ViewBag.List.TotalItemCount, new { @class = "pagerbar" }))
</fieldset>
